(defsrc
)

(defvar 
  tht 200
  thr 500
)

(defalias
  delete (tap-hold $tht $tht bspc C-bspc)
  mvlft (tap-hold $tht $tht left C-left)
  mvrgt (tap-hold $tht $tht right C-right)
  mvup (tap-hold $tht $tht up C-up)
  mvdn (tap-hold $tht $tht down C-down)
)

(deflayermap (main)
  bspc âœ—
  caps (tap-dance 1000 ((layer-while-held l1) (layer-while-held l2)))
  ralt (tap-dance 1000 (rctl C-bspc))
)

(deflayermap (l1)
  q S-1 ;; !
  w S-2 ;; @
  e S-[ ;; {
  r S-] ;; }
  a S-3 ;; #
  s S-4 ;; $
  d S-9 ;; (
  f S-0 ;; )
  z S-5 ;; %
  x S-6 ;; ^
  c [   ;; [
  v ]   ;; ]

  t -   ;; -
  y S-= ;; +
  g S-- ;; _
  h =   ;; =
  b S-7 ;; &
  n S-8 ;; *

  p S-\ ;; |
  ; S-` ;; ~
  ' `   ;; `

  m 1
  , 2
  . 3
  j 4
  k 5
  l 6
  u 7
  i 8
  o 9
  / 0

  spc @delete
  ret esc
  alt (layer-while-held browser-nav)
)

(deflayermap (l2)
  spc esc
  ; S-`
  ' `
  h @mvlft
  j @mvdn
  k @mvup
  l @mvrgt
  d bspc
  lsft caps
  alt (layer-while-held options)
  c A-M-h
  ret A-M-c
  f A-M-x
)

(deflayermap (options)
  j vold
  k volu
  h brdown
  l brup
  s pp
  p prev
  n next
)

